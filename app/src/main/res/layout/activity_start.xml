<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F8FF"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/baseline_airplanemode_active_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Математическая игра"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E86C1"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Потренируйте свои знания в математике!"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:layout_marginBottom="20dp" />



    <!-- Answer Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/startButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Новая игра"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/green"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="За авторством: Домбровского Н.C."
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp" />
</LinearLayout>